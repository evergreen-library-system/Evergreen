
#age-to-lost-container {
  margin-top: 20px;
}

#age-to-lost-container .row {
  margin-top: 20px;
}

#age-to-lost-container .form-group {
  padding-right: 10px;
}
  
.admin-splash-container .row {
  margin-top: 5px;
}

.admin-splash-container .new-entry {
  margin-top: 10px;
  padding-top: 10px;
  border-top: 2px solid #F5F5F5;
}

[data-bs-theme="dark"] .admin-splash-container .new-entry {
  border-top: 2px solid var(--bs-gray-950);
}

#auto-print-container {
  margin-top: 20px;
}

#auto-print-container .row {
  margin-top: 20px;
}

#edit-org-container input.ng-invalid-required {
  background-color: yellow;
  color: red;
}

@media (forced-colors: active) or (prefers-contrast: forced) {
  .admin-splash-container .new-entry {
    border: 0;
  }
}
