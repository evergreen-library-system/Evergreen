  --bs-cyan-500: #0DCAF0;
  --bs-cyan-400: #3DD5F3;
  --bs-cyan-300: #6EDFF6;
  --bs-cyan-200: #9EEAF9;
  --bs-cyan-100: #cff4fc;
  --bs-cyan-050: #add8e6;   /* custom blend */
