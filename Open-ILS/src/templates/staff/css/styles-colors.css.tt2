  --bs-red-rgb: 220,53,69;

  --bs-red-900: #2C0B0E;
  --bs-red-800: #58151c;
  --bs-red-700: #842029;
  --bs-red-600: #B02A37;
  --bs-red-500: #DC3545;
  --bs-red-400: #E35D6A;
  --bs-red-300: #EA868F;
  --bs-red-200: #F1AFB5;
  --bs-red-100: #f8d7da;


  /**********************/
  /*    LIGHT MODE      */
  /**********************/
  --black: black;
  --white: white;
  --bs-white: white;
  --bs-light: var(--bs-gray-100);
  --bs-dark: var(--bs-gray-900);
  --border: var(--bs-gray-300);
  --border-thick: var(--bs-gray-400);
  --inactive: var(--bs-gray-800);
