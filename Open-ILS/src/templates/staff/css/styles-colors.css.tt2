  --bs-blue-125: #b8daff;
  --bs-blue-150: #B3D9FF; /* custom blend */
  --bs-blue-200: #9EC5FE;
  --bs-blue-250: #86B7FE; /* custom blend */
  --bs-blue-300: #6ea8fe;
  --bs-blue-300-rgb: 110, 168, 254;
  --bs-blue-400: #3D8BFD;
  --bs-blue-500: #0D6EFD;
  --bs-blue-550: #0C63E4;
  --bs-blue-600: #0A58CA;
  --bs-blue-600-rgb: 10,88,202;
  --bs-blue-650: #0848a5; /* custom blend between 600 and 700 */
