[%- IF ctx.pref_ou && ctx.pref_ou != ctx.search_ou; %]
<div class="preflib">[%
    l('Preferred library: [_1]', '<span class="bold">' _ ctx.get_aou(ctx.pref_ou).name _ '</span>');
    IF NOT ctx.is_staff %]<a href="[% mkurl(ctx.opac_root _ '/myopac/prefs_settings', {}, [], 'opac.default_search_location') %]" class="preflib_change">[% l("(Change library)"); %]</a>[% END %]
</div>
[%- END %]
